{
    "index_patterns" : [
      "suricata*"
    ],
    "settings" : {
      "index" : {
        "number_of_shards" : "1"
      }
    },
    "mappings" : {
      "doc" : {
      "properties" : {
          "@timestamp" : {
           "type" : "date"
          },
          "dest_ip" : {
            "type" : "ip"
          },
          "src_ip" : {
            "type" : "ip"
          },
          "geoip" : {
            "dynamic" : true,
            "properties" : {
              "ip" : {
                "type" : "ip"
              },
              "location" : {
                "type" : "geo_point"
              },
              "latitude" : {
                "type" : "half_float"
              },
              "longitude" : {
                "type" : "half_float"
              }
            }
          }
        }
      }
    }
  }
