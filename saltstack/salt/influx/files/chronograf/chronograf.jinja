{%- set influxdb_host = salt['pillar.get']('chronograf:influxdb:host', 'localhost') %}
{%- set influxdb_port = salt['pillar.get']('chronograf:influxdb:port', '8086') %}
{%- set influxdb_user = salt['pillar.get']('chronograf:influxdb:user', 's4a') %}
{%- set influxdb_pass = salt['pillar.get']('chronograf:influxdb:pass', 's4a') %}
{%- set influxdb_proto = salt['pillar.get']('chronograf:influxdb:proto', 'http') %}

{%- set kapacitor_host = salt['pillar.get']('chronograf:kapacitor:host', 'localhost') %}
{%- set kapacitor_port = salt['pillar.get']('chronograf:kapacitor:port', '9092') %}
{%- set kapacitor_proto = salt['pillar.get']('chronograf:kapacitor:proto', 'http') %}

BOLT_PATH="/var/lib/chronograf/chronograf-v1.db"
BASE_PATH="/chronograf"
INFLUXDB_URL="{{ influxdb_proto }}://{{ influxdb_host }}:{{ influxdb_port }}"
INFLUXDB_USERNAME="{{ influxdb_user }}"
INFLUXDB_PASSWORD="{{ influxdb_pass }}"
KAPACITOR_URL="{{ kapacitor_proto }}://{{ kapacitor_host }}:{{ kapacitor_port }}"
